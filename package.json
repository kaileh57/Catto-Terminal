{
  "name": "cat-terminal",
  "version": "0.1.0",
  "description": "Terminal but cat",
  "main": "dist/main/index.js",
  "homepage": "https://github.com/hackclub/cat-terminal",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackclub/cat-terminal.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "tsc -p tsconfig.renderer.json && node scripts/copy-assets.js",
    "build:watch": "npm run build:main -- --watch",
    "electron:dev": "nodemon --watch dist/main --exec \"electron .\"",
    "electron": "electron .",
    "clean": "rimraf dist",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "start": "npm run build && npm run electron"
  },
  "keywords": [
    "terminal",
    "electron",
    "cat",
    "hackclub"
  ],
  "author": "Hack Club",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0"
  },
  "build": {
    "appId": "com.hackclub.catterminal",
    "productName": "Cat Terminal",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}